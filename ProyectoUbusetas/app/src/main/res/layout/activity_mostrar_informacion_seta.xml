<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/accent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/accent"
        tools:context="ubusetas.ubu.adrian.proyectoubusetas.interfaces.MostrarInformacionSeta">

        <TextView
            android:id="@+id/textView_DescripcionSeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/descripcion_seta" />

        <TextView
            android:id="@+id/textView_textoDescripcionSeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_DescripcionSeta"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/textView_GeneroSeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_textoDescripcionSeta"
            android:layout_marginTop="5dp"
            android:text="@string/genero_seta" />

        <TextView
            android:id="@+id/textView_textoGeneroSeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_GeneroSeta"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/textView_ComestibilidadSeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_textoGeneroSeta"
            android:layout_marginTop="5dp"
            android:text="@string/comestibilidad_seta" />

        <TextView
            android:id="@+id/textView_textoComestibilidadSeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_ComestibilidadSeta"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/textView_EnlaceSeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_textoComestibilidadSeta"
            android:layout_marginTop="5dp"
            android:text="@string/enlace_seta" />

        <TextView
            android:id="@+id/textView_textoEnlaceSeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_EnlaceSeta"
            android:layout_marginTop="5dp" />

        <ImageView
            android:id="@+id/imageView_setaDescrita"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/textView_textoEnlaceSeta"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/boton_volverMostrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView_setaDescrita"
            android:layout_marginTop="10dp"
            android:text="@string/boton_volver_mostrar" />

    </RelativeLayout>
</ScrollView>