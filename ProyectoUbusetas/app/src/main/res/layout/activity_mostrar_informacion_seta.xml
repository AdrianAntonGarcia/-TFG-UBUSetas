<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ubusetas.ubu.adrian.proyectoubusetas.MostrarInformacionSeta">

    <TextView
        android:id="@+id/textView_DescripcionSeta"
        android:text="@string/descripcion_seta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView_textoDescripcionSeta"
        android:layout_below="@+id/textView_DescripcionSeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView_setaDescrita"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/textView_textoDescripcionSeta"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/boton_volverMostrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/boton_volver_mostrar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
