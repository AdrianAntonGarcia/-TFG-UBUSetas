<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ubusetas.ubu.adrian.proyectoubusetas.interfaces.MostrarComparativa"
    tools:showIn="@layout/layout_mostrar_comparativa">

    <TextView
        android:id="@+id/TextView_Comparativa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_comparativa" />

    <ImageView
        android:id="@+id/ImageView_Comparativa_1"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_below="@+id/TextView_Comparativa"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/ImageView_Comparativa_2"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_below="@+id/ImageView_Comparativa_1"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher" />

</RelativeLayout>