<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ubusetas.ubu.adrian.proyectoubusetas.resultados.MostrarResultados"
    tools:showIn="@layout/layout_mostrar_resultados">

    <TextView
        android:id="@+id/TextView_ResultadosClasificador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_resultados_obtenidos"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <ListView
        android:id="@+id/listView_lista_resultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView_ResultadosClasificador"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/accent"></ListView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/boton_clave"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@android:drawable/ic_menu_share" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/boton_refrescar_resultados"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:srcCompat="@android:drawable/stat_notify_sync_noanim" />

</RelativeLayout>