<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ubusetas.ubu.adrian.proyectoubusetas.lanzador.Lanzadora"
    tools:showIn="@layout/layout_lanzadora">

    <ImageView
        android:id="@+id/imageView_lanzadora"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/TextView_lanzadora"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/imageView_lanzadora"
        android:layout_marginTop="5dp"
        android:text="@string/autor"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent" />
</RelativeLayout>
